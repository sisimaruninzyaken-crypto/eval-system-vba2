        If TypeName(c) = "Label" Then
            If Left$(c.name, 4) = "lbl_" Then
                nm = CStr(c.caption)
                
                vR = GetMMTValueSafe(p, "cboR_" & nm)
                vL = GetMMTValueSafe(p, "cboL_" & nm)
                
                vMin = vR
                If vL < vMin Then vMin = vL
                
                If vMin >= 0 Then
                    dict(nm) = vMin
                End If
            End If
        End If
    Next c
    
    ' 出力
    For Each nm In dict.keys
        Debug.Print nm & "=" & dict(nm)
    Next nm
End Sub

